pipeline{
  agent {
  docker {
    image 'maven-with-docker'
    args '-v /var/run/docker.sock:/var/run/docker.sock'
  }
}
  stages{
    stage('Git Checkout'){
      steps{
        checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Nehanilajkar/Jenkins-Projects.git']])
      }
    }
    stage('code Build'){
      steps{
        sh 'cd Maven-test-project'
        sh 'ls'
        sh 'cd Maven-test-project && mvn clean package'
      }
    }
    stage('Docker build'){
      steps{
        sh 'cd Maven-test-project'
        sh 'ls'
        sh 'cd Maven-test-project && docker build -t mvn:1 -f Dockerfile .'
      }
    }
    stage('Docker run'){
      steps{
        sh 'docker run -d -p 8000:8080 mvn:1 '
      }
    }
  }
}
